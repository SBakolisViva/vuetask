{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "module": "esnext",
    "lib": [
      "esnext",
      "dom",
      "es5",
      "es6",
      "scripthost",
      "es2015.promise"
    ],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "target": "es5",
    "sourceMap": true,
    "skipLibCheck": true,
    "strict": true,
    "types": [
      "webpack-env",
      "vue-typescript-import-dts",
      "vuetify",
      "googlepay",
      "applepayjs",
      "grecaptcha"
    ],
    "baseUrl": ".",
    "strictPropertyInitialization": false,
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "exclude": [
    "bin",
    "node_modules"
  ],
  "include": [
    "src/**/*"
  ],
  "awesomeTypescriptLoaderOptions": {
    "silent": true
  }
}
